{
  "version": 2,
  "env": {
    "DEPLOY_TIME": "2024-03-21-11"
  },
  "crons": [
    {
      "path": "/api/rewards/process-daily",
      "schedule": "0 0 * * *"
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/discord-interactions.js",
      "use": "@vercel/edge",
      "config": {
        "runtime": "edge",
        "regions": ["iad1"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/discord-interactions",
      "dest": "/api/discord-interactions.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "^/verify$",
      "dest": "/index.html"
    },
    {
      "src": "^/bux$",
      "dest": "/index.html"
    },
    {
      "src": "^/collections$",
      "dest": "/index.html"
    },
    {
      "src": "^/merch$",
      "dest": "/index.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/((?!api).*)",
      "dest": "/index.html"
    }
  ]
} 