{
  "version": 2,
  "env": {
    "DEPLOY_TIME": "2024-03-21-1"
  },
  "crons": [
    {
      "path": "/api/rewards/process-daily",
      "schedule": "0 0 * * *"
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
} 