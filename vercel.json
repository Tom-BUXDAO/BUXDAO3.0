{
  "version": 2,
  "env": {
    "DEPLOY_TIME": "2024-03-21-11",
    "API_BASE_URL": "https://buxdao.com"
  },
  "crons": [
    {
      "path": "/api/rewards/process-daily",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/sync-holders",
      "schedule": "0 0 * * *"
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/nft-lookup/rank.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/discord-interactions.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "edge"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/sync-holders",
      "dest": "api/sync-holders.js",
      "methods": ["GET", "POST"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST",
        "Access-Control-Allow-Headers": "Authorization, Content-Type"
      }
    },
    {
      "src": "/api/nft-lookup/rank",
      "dest": "/api/nft-lookup/rank.js"
    },
    {
      "src": "/api/discord-interactions",
      "dest": "/api/discord-interactions.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "^/verify$",
      "dest": "/index.html"
    },
    {
      "src": "^/bux$",
      "dest": "/index.html"
    },
    {
      "src": "^/collections$",
      "dest": "/index.html"
    },
    {
      "src": "^/merch$",
      "dest": "/index.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/((?!api).*)",
      "dest": "/index.html"
    }
  ]
} 